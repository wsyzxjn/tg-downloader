{
  "name": "tg-downloader",
  "private": true,
  "description": "Telegram media downloader with bot and web console",
  "author": "amatsuka <amatsukamao@qq.com>",
  "version": "0.1.0",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--enable-source-maps node dist/index.js",
    "dev": "cross-env NODE_OPTIONS=--enable-source-maps tsx watch src/index.ts",
    "lint": "biome check src",
    "format": "biome format --write src",
    "fix": "biome check --write src",
    "check": "biome check src",
    "type-check": "tsc --noEmit",
    "build": "tsup && pnpm run build:web",
    "build:web": "pnpm -C web build",
    "build:production": "cross-env NODE_ENV=production tsup",
    "prepublishOnly": "pnpm run check && pnpm run build:production"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.1",
    "cross-env": "^10.1.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@grammyjs/commands": "^1.2.0",
    "@hono/node-server": "^1.19.9",
    "grammy": "^1.39.3",
    "hono": "^4.11.8",
    "sanitize-filename": "^1.6.3",
    "telegram": "^2.26.22"
  }
}
